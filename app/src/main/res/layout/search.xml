<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:gravity="center"
        android:orientation="vertical">

        <SurfaceView
            android:id="@+id/radar_surfaceView"
            android:layout_width="345dp"
            android:layout_height="345dp"></SurfaceView>

        <TextView
            android:layout_width="210dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:text="EPC"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/epc_text"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:background="#ffffff"
            android:padding="5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/searchstart_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/and_btn_check_start_u" />

        <ImageView
            android:id="@+id/searchstop_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/and_btn_check_stop_u" />
    </LinearLayout>
</LinearLayout>