<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#657484"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.89"
                android:background="@color/BlueGray"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_device_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/menu_device"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_fmver_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/menu_fw_ver"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_weight="0.62"
                    android:background="@color/BlueGray"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_device"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/tv_device_title"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@+id/tv_device_title"
                        android:layout_weight="1"
                        android:background="@drawable/and_textfield1_u"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="" />

                    <TextView
                        android:id="@+id/tv_fmver"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignLeft="@+id/tv_device"
                        android:layout_alignTop="@+id/tv_fmver_title"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/and_textfield1_u"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="0.73"
                android:background="@color/BlueGray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_remaining_buttery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/menu_remaining_buttery"
                    android:textColor="#ffffff" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:id="@+id/remaining_buttery"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="1dp"
                            android:layout_weight="0.08"
                            android:background="#009900"></FrameLayout>

                        <FrameLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.92"></FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/icon_buttery"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.1"
                            android:background="@drawable/and_ico_battery1" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.2"
                            android:background="@drawable/and_ico_battery2" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_buttery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:textColor="@android:color/white" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- MainMENU -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@color/BlueLight"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/menu_deviceconnection"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/btn_manager_shape"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="2"
                            app:srcCompat="@drawable/bluetooth" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="Device Conect"
                            android:textColor="@color/BlueGrayLight"
                            android:textSize="26sp" />


                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/menu_setting"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/btn_manager_shape"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,ImageContrastCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/settingimage"
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="2"
                            app:srcCompat="@drawable/admin" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="Setting"
                            android:textColor="@color/BlueGrayLight"
                            android:textSize="26sp" />


                    </LinearLayout>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/menu_barcode"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@drawable/btn_manager_shape"
                        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="70dp"
                            android:layout_weight="2"
                            app:srcCompat="@drawable/right_arrow" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="4"
                            android:gravity="center_vertical"
                            android:text="Save"
                            android:textColor="@color/BlueGrayLight"
                            android:textSize="26sp" />


                    </LinearLayout>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="75dp"
                android:layout_marginRight="75dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:orientation="vertical" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>